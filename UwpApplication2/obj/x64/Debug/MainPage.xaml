<Page
    x:Class="UwpApplication2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpApplication2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

    <SplitView x:ConnectionId='2' Name="splitView" Background="White" PaneBackground="#0144AE"
               DisplayMode="CompactInline" CompactPaneLength="240" OpenPaneLength="240">
        <SplitView.Pane>
            <StackPanel>
                <Button x:ConnectionId='3' Content="Algebraic calculator"
                        Foreground="White"
                        Background="Transparent"
                        Margin="40 0"                     />
                <Button x:ConnectionId='4' Content="Arithmetic calculator"
                        Foreground="White"
                        Background="Transparent"
                        Margin="40 0"                    />
                <Button x:ConnectionId='5' Content="Trigonometric calc"
                        Foreground="White"
                        Background="Transparent"
                        Margin="40 0"                       />
                <Button x:ConnectionId='6' Content="About"
                        Foreground="White"
                        Background="Transparent"
                        Margin="40 0"                    />
            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid x:ConnectionId='7' Name="grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="120" />
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='8' Name="Block" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"> Operand 1</TextBlock>
                <TextBox x:ConnectionId='9' Grid.Row="0" Grid.Column="1" Width="120" Height="30" PlaceholderText="Operand 1"
                         Name="operand1" HorizontalAlignment="Center" />
                <RadioButton x:ConnectionId='10' Grid.Column="0" Grid.Row="1" x:Name="op1" Margin="5"
                                                      
                             GroupName="First Group" Content="+" />
                <RadioButton x:ConnectionId='11' Grid.Column="1" Grid.Row="1" x:Name="op2" Margin="5"
                                                      
                             GroupName="First Group" Content="-" />
                <RadioButton x:ConnectionId='12' Grid.Column="2" Grid.Row="1" x:Name="op3" Margin="5"
                                                      
                             GroupName="First Group" Content="/" />
                <RadioButton x:ConnectionId='13' Grid.Column="3" Grid.Row="1" x:Name="op4" Margin="5"
                                                      
                             GroupName="First Group" Content="*" />
                <TextBlock x:ConnectionId='14' Name="TextBlock1" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"> Operand 2</TextBlock>
                <TextBox x:ConnectionId='15' Grid.Row="2" Grid.Column="1" Width="120" Height="30" PlaceholderText="Operand 2"
                         Name="operand2" />
                <Button x:ConnectionId='16' Grid.Row="3" Grid.Column="1"
                        Name="Button"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Content="Calculate !"
                        BorderBrush="Blue"
                        Foreground="Black"
                        Background="Transparent"
                                               />
                <TextBlock x:ConnectionId='17' Name="TextBlock2" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Result</TextBlock>
                <TextBox x:ConnectionId='18' Grid.Row="4" Grid.Column="1" Width="120" Height="30" PlaceholderText="Result" Name="res"
                         IsReadOnly="True" />
                <TextBlock x:ConnectionId='19' Margin="10" Grid.ColumnSpan="3" Name="about_me" Visibility="Collapsed">Galetinko Vladimir 535b</TextBlock>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>

